<?xml version="1.0" encoding="UTF-8" ?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
                 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                 xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm
http://java.sun.com/xml/ns/persistence/orm_1_0.xsd"
                 version="1.0">

    <description>XML Mapping file</description>


    <entity class="io.github.mmpodkanski.movie.MovieSnapshot" access="FIELD">
        <table name="movies"/>
        <attributes>
            <id name="id">
                <generated-value strategy="IDENTITY"/>
            </id>
            <basic name="title">
                <column nullable="false"/>
            </basic>
            <basic name="director">
                <column nullable="false"/>
            </basic>
            <basic name="producer">
                <column nullable="false"/>
            </basic>
            <basic name="description">
                <column nullable="false"/>
            </basic>
            <basic name="releaseDate">
                <column nullable="false" precision="4" scale="0"/>
            </basic>
            <basic name="category">
                <column  nullable="false"/>
                <enumerated>STRING</enumerated>
            </basic>
            <basic name="stars">
                <column nullable="false"/>
            </basic>
            <basic name="createdAt">
                <column nullable="true"/>
            </basic>
            <basic name="acceptedByAdmin">
                <column nullable="false"/>
            </basic>
            <basic name="imgLogoUrl">
                <column nullable="true"/>
            </basic>
            <basic name="imgBackUrl">
                <column nullable="true"/>
            </basic>
            <one-to-many name="comments" fetch="EAGER">
                <cascade>
                    <cascade-all/>
                </cascade>
            </one-to-many>

            <many-to-many name="actors" target-entity="io.github.mmpodkanski.actor.dto.SimpleActorSnapshot">
                <join-table name="MOVIES_ACTORS">
                    <join-column name="movie_id"/>
                    <inverse-join-column name="actor_id"  />
                </join-table>
                <cascade>
                    <cascade-merge/>
                </cascade>
            </many-to-many>

        </attributes>
    </entity>

    <entity class="io.github.mmpodkanski.user.UserMovie" access="FIELD">
        <table name="movies"/>
        <attributes>
            <id name="id">
                <generated-value strategy="IDENTITY"/>
            </id>
            <basic name="title">
                <column nullable="false"/>
            </basic>
            <basic name="director">
                <column nullable="false"/>
            </basic>
            <basic name="producer">
                <column nullable="false"/>
            </basic>
            <basic name="description">
                <column nullable="false"/>
            </basic>
            <basic name="releaseDate">
                <column nullable="false" precision="4" scale="0"/>
            </basic>
            <basic name="category">
                <column  nullable="false"/>
                <enumerated>STRING</enumerated>
            </basic>
            <basic name="stars">
                <column nullable="false"/>
            </basic>
            <basic name="createdAt">
                <column nullable="true"/>
            </basic>
            <basic name="acceptedByAdmin">
                <column nullable="false"/>
            </basic>
            <basic name="imgLogoUrl">
                <column nullable="true"/>
            </basic>
            <basic name="imgBackUrl">
                <column nullable="true"/>
            </basic>
        </attributes>
    </entity>


    <entity class="io.github.mmpodkanski.user.UserSnapshot" access="FIELD">
        <table name="users"/>
        <attributes>
            <id name="id">
                <generated-value strategy="IDENTITY"/>
            </id>
            <basic name="username">
                <column nullable="false"/>
            </basic>
            <basic name="email">
                <column nullable="true"/>
            </basic>
            <basic name="password">
                <column nullable="false"/>
            </basic>
            <basic name="role">
                <enumerated>STRING</enumerated>
            </basic>
            <basic name="locked">
                <column nullable="false"/>
            </basic>
            <basic name="enabled">
                <column nullable="false"/>
            </basic>
            <many-to-many name="favourites" target-entity="io.github.mmpodkanski.user.UserMovie">
                <join-table name="USER_FAVOURITES">
                    <join-column name="user_id" unique="false"/>
                    <inverse-join-column name="movie_id"  unique="false"/>
                </join-table>
                <cascade>
                    <cascade-merge/>
                </cascade>
            </many-to-many>

        </attributes>
    </entity>


    <entity class="io.github.mmpodkanski.actor.ActorSnapshot" access="FIELD">
        <table name="actors"/>
        <attributes>
            <id name="id">
                <generated-value strategy="IDENTITY" generator="inc"/>
            </id>
            <basic name="firstName">
                <column nullable="false"/>
            </basic>
            <basic name="lastName">
                <column nullable="false"/>
            </basic>
            <basic name="birthDate">
                <column nullable="false"/>
            </basic>
            <basic name="imageUrl">
                <column nullable="true"/>
            </basic>
            <basic name="acceptedByAdmin">
                <column/>
            </basic>
            <many-to-many mapped-by="actors" name="movies" target-entity="io.github.mmpodkanski.movie.MovieSnapshot"/>
        </attributes>
    </entity>

    <entity class="io.github.mmpodkanski.actor.dto.SimpleActorSnapshot" access="FIELD">
        <table name="actors"/>
        <attributes>
            <id name="id">
                <generated-value strategy="IDENTITY" generator="inc"/>
            </id>
            <basic name="firstName">
                <column nullable="false"/>
            </basic>
            <basic name="lastName">
                <column nullable="false"/>
            </basic>
            <many-to-many mapped-by="actors" name="movies" target-entity="io.github.mmpodkanski.movie.MovieSnapshot"/>
        </attributes>
    </entity>

    <entity class="io.github.mmpodkanski.movie.CommentSnapshot" access="FIELD">
        <table name="comments"/>
        <attributes>
            <id name="id">
                <generated-value strategy="IDENTITY"/>
            </id>
            <basic name="createdAt">
                <column nullable="true"/>
            </basic>
            <basic name="title">
                <column nullable="false"/>
            </basic>
            <basic name="description">
                <column nullable="false"/>
            </basic>
            <basic name="author">
                <column nullable="false"/>
            </basic>
        </attributes>
    </entity>

</entity-mappings>